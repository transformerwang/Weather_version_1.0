<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:id="@+id/detail_card_view"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@color/orangecolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/image_padding_current"
        android:gravity="center_vertical"
        android:id="@+id/relative_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arlington"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/right_now_txt"
            android:id="@+id/text_right_now"
            />
        <TextView
            android:layout_below="@+id/text_right_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partly cloud"
            android:textSize="@dimen/weather_text_size"
            android:id="@+id/text_current_weather"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="24Â°"
            android:textSize="@dimen/weather_temp_textsize"
            />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/image_current_weather"
            android:src="@mipmap/sun12"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
